{erl_opts, [warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_missing_spec,
            warn_untyped_record, debug_info]}.
{xref_checks, [undefined_function_calls]}.
{sub_dirs, ["rel"]}.
{deps, [
        %% Trie in Erlang
        {bstr, ".*", {git, "https://github.com/jcomellas/bstr.git", "master"}},
        {trie, ".*", {git, "https://github.com/okeuday/trie.git", "master"}},
        {kvc, ".*", {git, "https://github.com/etrepum/kvc.git", "master"}},
        {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git", "master"}},
        {proper, ".*", {git, "git://github.com/manopapad/proper.git", "master"}},
        {lager, ".*", {git, "https://github.com/basho/lager.git", {tag, "1.2.1"}}}
       ]}.
